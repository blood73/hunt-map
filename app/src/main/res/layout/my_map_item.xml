<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mode="same_level"
    app:dragEdge="right">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/deleteButtonBackground">

        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="@dimen/delete_button_width"
            android:layout_height="@dimen/delete_button_width"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/delete_button"
            android:src="@drawable/ic_del" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools"
            android:padding="@dimen/region_item_padding">

            <android.support.v7.widget.CardView
                android:id="@+id/regionCardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/region_item_height"
                style="@style/CardViewStyle">

                <LinearLayout
                    android:id="@+id/root_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/region_name"
                        style="@style/TextAppearanceRegionName"
                        android:paddingTop="@dimen/region_item_top_padding"
                        android:paddingBottom="@dimen/region_item_bottom_padding"
                        android:paddingStart="@dimen/region_item_left_padding"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        tools:text="@string/default_region_name" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/selected_icon_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date_text"
                            android:layout_width="@dimen/date_prolongate_width"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            tools:text="11 апр. ‘ 17"
                            tools:visibility="visible"
                            android:visibility="gone"
                            style="@style/TextAppearanceRegionDate"/>

                        <TextView
                            android:id="@+id/prolongate"
                            android:layout_width="@dimen/date_prolongate_width"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/prolong"
                            android:textAllCaps="true"
                            android:visibility="gone"
                            style="@style/TextAppearanceProlongateText" />

                        <ImageView
                            android:id="@+id/select_map"
                            android:layout_width="@dimen/arrow_image_width"
                            android:layout_height="@dimen/arrow_image_width"
                            android:paddingEnd="@dimen/arrow_image_padding_end"
                            android:scaleType="centerInside"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/select_map_description"
                            android:src="@drawable/arrow" />

                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/table_header_left_padding"
                android:background="@color/myRegionsDelimiterColor"/>

        </LinearLayout>
    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>